<!--index.wxml-->
<view class="container">
  <view class="container-result" wx:if="{{selectedRefectory}}">请前往<text class="text-result">{{selectedRefectory}}</text>完成用餐任务</view>
  <view class="container-button">
    <button type="primary" class="button" bindtap="onStartSelect">请指引我前进方向</button>
    <button class="button button-secondary" bindtap="onDeleteandSelect" wx:if="{{selectedRefectory}}">怀疑人生，删除该项</button>
  </view>
  <picker class="picker-school" bindchange="onSchoolChange" bindtap="onSchoolSelect" value="index" range="{{schoolList}}">
    <view class="picker-selected">
      当前学校：{{schoolSelected}} <text>(点击更改)</text>
    </view>
  </picker> 
  <view class="instruction">食堂列表</view>
  <view class="list-refectory" wx:for="{{refectorys}}">
    <text class="item-refectory">{{item}}</text>
    <button class="button-delete" data-refectory="{{item}}" bindtap="onDeleteOption">去除</button>
  </view>
</view>
